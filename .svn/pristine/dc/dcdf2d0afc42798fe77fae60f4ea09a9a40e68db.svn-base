*{
	font-family:"Microsoft YaHei", "New York", serif;
}
body{
	
	margin:0 auto;
	overflow:scroll;
	background:url(../images/home/bg_body.jpg);

}
li{
	list-style-type:none;
}
.top{
	text-align:center;
	margin:0 auto;
}

.search {
	margin:10px auto;
	width:900px;
	background-color:#fff;
	height:80px;

}

.search ul{
   float:left;
   margin-left:40px;
}

.searchul a:hover { 
	color: #6699CC;
	text-decoration:underline;
 }

.searchul li{
	float:left;
	width:50px;
	font-family: 'Microsoft Yahei';
	font-size: 18px;
	color: #333;
	text-align:center;
	cursor: pointer;
	margin-right: 22px;
	letter-spacing: 1px;
	margin-left: 22px;
}
.input{
width:800px;
height:40px;
float:left;
margin:10px auto;
margin-left:40px;

}

#sousoukuang{
/* 	border:#F7F7F8 3px solid; */
	
}

.choose{
	font-weight:bold;
	width:500px;
	font-size:15px;
	color:teal;
	
}
.choose a{
	margin-right:20px;
}

.txt{
	float:left;
}
.txt_search{

	width:600px;
	height:28px;
}
.btn_search{
	width: 93px;
	height: 31px;
	background:url(../images/home/bg_login.png);


	border: 0;
	border-radius: 0;
	color: #fff;

	font-size: 14px;

	padding: 0;
	padding-top: 4px\9;
	

}
button{
	background: none;
	border: 1px solid #36980d;
	border-radius: 2px;
	display: inline-block;
	vertical-align: top;
	width: 93px;
}


.result{
	background-color:#FFF;
	width:900px;
	height:900px;
	margin:10px auto;
	text-align:left;
	
}

 .result_main{
	font-family: 'Microsoft Yahei';
	font-size:20px;
	margin-left:30px;
	margin-top:10px;
	margin-right:30px;
	width:840px;
	word-wrap: break-word;
	overflow:hidden;
	
}

.result_suject{
	font-family: 'Microsoft Yahei';
	font-size:20px;
	font-style: italic;
	color: orange;
}

.result_content{
	font-size:17px;
	text-align: left;
	width:840px;
	display: inline-block;
	word-wrap: break-word;
	overflow:hidden;
}

.result_time{
	font-size: 10px;
	
	color:orange;
}

.fenye{
	font-size:15px;
	color:#0c87c9;
}

.fenye a:link {text-decoration:none;color:#0c87c9;}
.fenye a:visited {text-decoration:none;color:#0c87c9;}
.fenye a:hover {text-decoration:none;color:#0c87c9;}
.fenye a:active {text-decoration:none;color:#0c87c9;}
