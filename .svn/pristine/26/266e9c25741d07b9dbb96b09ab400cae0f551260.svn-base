/* topics */

.title{
	
	width:100%;
	height:28px;
	background:#FAFBFC;
	color:#999;
}

.table1{
	width:100%;
	margin:0px 0px 8px;
	border: 1px solid #A9CBEE;
	height:280px;
	background:#FAFBFC;
}
.forumTP{
	width:100%;
	margin:0px 0px 8px;
	border: 1px solid #A9CBEE;
	height:auto;
	background:#FAFBFC;
}
#TPprocess,#TPresult{
	width:70%;
	height:80%;
	margin:50px auto;
}

.wirter{
	text-align: center;
	max-width: 180px;
	background: none repeat scroll 0% 0% #EFF4FB;
	border-right: 1px solid #A9CBEE;
}

.user_head{
	margin: 0px auto;
	padding: 10px 0px 10px 26px;
	text-align: left;
	position: relative;
    width: 127px;
}

.jinyan{
	color:#3399CC;
}

.username,.replyer_name{
	margin-top: 6px;
	font-weight: bold;
}

.level{
	line-height: 24px;
	font-weight: normal;
}

.post_info{
	list-style: none outside none;
	margin: 0px;
	padding: 0px;
	border: medium none;
	outline: 0px none;
}

.data{
	border-bottom: 1px solid #A9CBEE;
	padding: 0px 10px;
	height: 24px;
	background: none repeat scroll 0% 0% #EFF4FB;
}

.post_body,.reply_body{
	width: 700px;
	outline: 0px none;
	border: medium none;
	padding: 0px;
	margin: 0px;
	list-style: none outside none;
}

.control{
	height: 28px;
	background: none repeat scroll 0% 0% #EFF4FB;
	border-top: 1px solid #A9CBEE;
	padding: 0px 10px;
	line-height: 28px;
}

.editor{
	position:relative;
	margin:20px auto;
}
.login1{
	position:absolute;
	z-index:9999;
	line-height:30px;
	top:50%;
	margin-top:-15px;
	text-align:center;
	left:0px;
}

.mask{
	width:100%;
	height:100%;
	background-color:#eee;
	z-index:100;
	position:absolute;
	top:0px;
	left:0px;
	opacity:.2;
	filter:alpha(opacity=20);
}


.labelIndex{
	margin:5px 10px;
	font-size:18px;
	color:#00F;
}