.mainBox{
	width: 1050px;
	overflow: hidden;
}
.rightContent{
	float: left;
	width: 825px;
	text-align:left;
	margin-left: 25px;
}
.hotQandA{
	background: #fff;
	width: 820px;
	min-height: 555px;
	max-height: 555px;
}
.hotQandATitle {
	height: 40px;
	border-top: #087EC4 solid 3px;
	align:left;
	width: 820px;
}
#hotTitle{
	margin-left: 25px;
	font-size: 16px;
	color: #000;
	line-height: 40px;
	font-family: "Microsoft YaHei UI";
	font-weight: bolder;
	color: #525350;
	float: left;
	text-shadow: 1px 1px 1px #999;
}
.addQuestion{
	padding:4px 15px;
	background:#0C86CE;
	color: #fff;
	float: right;
	margin-top: 10px;
	margin-right: 35px;
	border-radius:5px;
}

.rightContent{
	width:800px;
	float:left;
	margin-left:30px;
	overflow: hidden;
}

/*.killerTitle*/
.killerTitle {
	background: url(../../img/bg_rightTitle.png) no-repeat;
	width: 100%;
	height: 30px;
	text-align: center;
}

.killerTitle h3 {
	font-size: 16px;
	color: #fff;
	font-weight: 900;
	line-height: 30px;
	width: 40%;
	text-shadow: 2px 2px 2px #999;
}

/*问题达人标签*/
.killerLabel {
	margin-bottom: 15px;
	width: 300px;
	background: #FFF;
	height: 375px;
}

.killerLabelContent {
	width: 270px;
	margin: 5px auto;
}

.killerLabelInfo {
	overflow: hidden;
	text-align: center;
	padding:15px;
}

.killerLabelInfo tr {
	height: 20px;
}

.killerLabelInfo span {
	width: 15px;
	height: 15px;
	display: block;
	margin-right: 10px;
	text-align: center;
	color: #fff;
	float: left;
}

.killerLabelInfo a {
	color: blue;
}

.killerLabelInfo a:hover {
	color: red;
}

.killerLabelInfo span.rank1 {
	background: url(../../img/bg_1.png) no-repeat;
}

.killerLabelInfo span.rank2 {
	background: url(../../img/bg_2.png) no-repeat;
}

.killerLabelInfo span.rank3 {
	background: url(../../img/bg_3.png) no-repeat;
}

.killerLabelInfo span.rank4 {
	background: url(../../img/bg_4.png) no-repeat;
}


/*interest copyFromNewBlog_User.css  */
.interest {
	width: 5300px;
	float: left;
	background:#fff;
}

.interestTitle {
	width: 735px;
	height: 40px;
	border-bottom:1px #e1e1e1 solid;
}

.interestTitle h3 {
	
	line-height: 35px;
	margin-left: 40px;
	float: left;
}

.interestContent {
	background: #fff;
	height: 335px;
	overflow: hidden;
}

.interestTitle a {
	font-size:16px;
	color:#333;
	text-align:center;
	margin-top:5px;
}

.interest_blog,.interest_forum,.interest_question,.interest_label
{
	width:150px;
	height:40px;
	border-right:1px #e1e1e1 solid;
	float:left;
}
.interest_blog{
	background:#087ec4;
}
.interest_blog a {
	float: left;
	width: 150px;
	color:#fff;
}

.interest_forum a {
	float: left;
	width: 150px;
}

.interest_question a {
	float: left;
	width: 150px;
}

.interest_label a {
	float: left;
	width: 100px;
}

.interest_blog_Info {
	width: 720px;
	display: none;
}

.interest_block {
	display: block;
}

.interest_Info_right {
	width: 120px;
	float: right;
	margin-right: 15px;
}

.interest_blog_Info_left {
	width: 720px;
	height:260px;
	margin:5px;
}

.interest_more{
	width:740px;
	background:#ebebeb;
	height:30px;
	text-align:center;
	line-height:30px;
	font-size:14px;
	font-family:"宋体";
}

.interest_more a{
		color:#666666;
}
th{
	font-weight:normal;
}

.interest_blog_Info_left_Info {
	overflow: hidden;
	text-align: center;
	table-layout: fixed;
	line-height:27px;
	margin-left:20px;
}

.interest_blog_Info_left_Info tr {
	height: 20px;
}

.interest_blog_Info_left_Info td {
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis; /*截断文字，显示省略号(...)*/
	-o-text-overflow: ellipsis; /*Opera的专用截断文字的属性*/
}

.interest_blog_Info_left_Info a {
	color: blue;
}

.interest_blog_Info_left_Info a:hover {
	color: red;
}
.tr1{
	background:#e7edf6;
	font-size:14px;
	font-family:"宋体";
	font-weight:normal;
	line-height:27px;
}
.tr2{
	height:40px;
}
