$(function(){

	$("#login_all").click(function() {
		/*var href = encodeURIComponent(window.location.href);*/
		var href = window.location.href;
		var height = $(document.body).height();
		
		$("#login_href").val(href);
		
		$("#main_login").css("width", "100%");
		$("#main_login").css("height", height);
		$("#main_login").css("position", "absolute");
		$("#main_login").css("background", "black");
		$("#main_login").css("opacity", "0.7");
		$("#main_login").css("z-index", "1500");
		$("#main_login").css("display", "block");
		
		$("#login_div").css("position", "absolute");
		$("#login_div").css("z-index", "1550");
		$("#login_div").css("display", "block");
	});
	
	$("#main_login").click(function(){
		
		$("#main_login").css("display", "none");
		$("#login_div").css("display", "none");
	});
	
});
