.mainBox{
	font-family: "Microsoft YaHei UI";
    min-height:850px;
    overflow: hidden;
}

.BoardIndex{
	float:left;
	width:210px;
	
}

#indexBg{
	display:inline-block;
	margin-bottom:3px;
	width:206px;
	height:34px;
	background:url(../../images/Forums/noselected.png) no-repeat;
}

#indexBg1{
	display:inline-block;
	margin-bottom:3px;
	width:206px;
	height:34px;
	background:url(../../images/Forums/selected.png) no-repeat;
}

#boardName{
	//margin-left:100px;
	font-size:20px;
	color:#fff;
}

.rightContent{
	width:800px;
	float:left;
	margin-left:30px;
}

.rightContent #hotLabel{
	width:100%;
	height:300px;
	background-color:#fff;
}


.rightContent #hotLabel #title{
	width:100%;
	height:34px;
	border-bottom:#3FC8F5 3px solid;
	
	}
	
.rightContent #hotLabel #content{
	width:80%;
	margin:30px auto;
	font-size:15px;
	color:#3FC8F5;
	height:260px;
	word-wrap: break-word;
}

.rightContent #hotLabel #title #title-bg{
	background:url(../../images/Forums/hotLabel.png) no-repeat;
	width:156px;
	height:34px;
	float:left;
}
.rightContent #hotLabel #title #titleName{
	float:left;
	margin-left:40px;
	margin-top:5px;
	font-size:18px;
	color:#fff;
}

.rightContent #hotLabel #title #postForum{
	float:right;
	margin-right:10px;
	margin-top:5px;
	width:87px;
	height:25px;
	background:url(../../images/Forums/postButton.png) no-repeat;
	font-size:15px;
	color:#fff;
	text-align:center;
}


.rightContent #forumsContent{
	width:100%;
	height:500px;
	background:#fff;
	margin-top:10px;
}

.rightContent #forumsContent #content{
	width:100%;
	height:400px;
}

.rightContent #forumsContent #title{
	background:#EEEEEE;
	height:35px;
	width:100%;
}

.rightContent #forumsContent #title #wellForums,#hotForums,#discuss,#origin{
	width:25%;
	float:left;
	height:25px;
	text-align:center;
	font-size:15px;	
	margin-top:5px;
	color:#999;
}
.rightContent #forumsContent table{
	width:80%;
	font-size:12px;
	margin:20px auto;
	line-height:25px;
	color:#9B9995;
	
}
.rightContent #forumsContent #td1{
	width:50%;
}
.rightContent #forumsContent #td2{
	width:25%;
}
.rightContent #forumsContent #td3{
	width:25%;
}

.rightContent #forumsContent #tr1{
	font-size:15px;
	color:#3FC8F5;
}

.rightContent #listWell,#listHot,#listDiscuss,#listOrigin{
	height:400px;
}


.rightContent #forumsContent #title  a:link {color:#999;}		/* 未被访问的链接 */
.rightContent #forumsContent #title  a:visited {color:#999;}	/* 已被访问的链接 */
.rightContent #forumsContent #title  a:hover {color:#3FC8F5;}	/* 鼠标指针移动到链接上 */
.rightContent #forumsContent #title  a:active {color:#3FC8F5;}	/* 正在被点击的链接 */

#content  a:link {color:#999;}		/* 未被访问的链接 */
#content  a:visited {color:#999;}	/* 已被访问的链接 */
#content  a:hover {color:#3FC8F5;}	/* 鼠标指针移动到链接上 */
#content  a:active {color:#3FC8F5;}	/* 正在被点击的链接 */


.submitButton a:link {color:#fff;}		/* 未被访问的链接 */
.submitButton a:visited {color:#fff;}	/* 已被访问的链接 */
.submitButton a:hover {color:#fff;}	/* 鼠标指针移动到链接上 */
.submitButton a:active {color:#fff;}	/* 正在被点击的链接 */


